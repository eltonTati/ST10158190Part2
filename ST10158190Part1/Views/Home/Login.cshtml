@{
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .container {
            max-width: 400px;
            margin: 100px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
        }

        form {
            margin-top: 20px;
        }

        input[type="text"],
        button {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            box-sizing: border-box;
        }

        button {
            background-color: #007bff;
            color: #fff;
            border: none;
            cursor: pointer;
        }

            button:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <div class="text-center">
            <p>If you don't have an account <a href="https://localhost:7264/Home/Signup">Sign Up</a> for a new account.</p>
        </div>
        <h2>Login</h2>
        <form asp-controller="Login" asp-action="Login" method="post">
            <p>Please enter your first name and email:</p>
            <input type="text" name="Name" placeholder="Name" required>
            <input type="text" name="Email" placeholder="example@gmail.com" required>
            <button type="submit">Submit</button>
        </form>
    </div>
</body>
</html>
